{% extends 'base.html.twig' %}
{%  block body %}
    <div class="show-fig col-sm-6">
        <img src="{{ asset('images/randonnees/') ~ randonnee.image }}"/>
    </div>
    <div class="col-sm-6 show-infos">
        <h2 class="text-center">{{ randonnee.name }}</h2>
        <p id="identifiantRando" style="display: none">{{ randonnee.trace }}</p>
        <p class="text-right">Randonnée proposée par {{ user.username }}<a href="/user/{{ user.username }}">Voir ses randonnées</a></p>
        <p>Latitude : {{ randonnee.latitude }}</p>
        <p>Longitude : {{ randonnee.longitude }}</p>
        <p>Distance : {{ randonnee.distance }} kms</p>
        <p>Temps : {{ randonnee.time }} minutes</p>
        <p>Difficulté : {{ randonnee.difficulty }}</p>
        <p>Description : {{ randonnee.description }}</p>
    </div>
    <div class="col-sm-6"><div id="map_canvas" style="width: 500px; height: 300px"></div></div>
    <div class="col-sm-6 show-infos"> <div id="fos_comment_thread" data-thread="{{ thread.id }}">

            {% include 'FOSCommentBundle:Thread:comments.html.twig' with {
            'comments': comments,
            'thread': thread
            } %}

        </div></div>



    {% block javascripts %}
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCsZoGmPF1XmS5cqDN0QIQ-CEW3lgAWY6E&signed_in=true&callback="
                type="text/javascript"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="{{ asset('js/trace.js') }}"></script>
    {% endblock %}
{%  endblock %}
